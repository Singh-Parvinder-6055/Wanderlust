<% layout("layouts/boilerplate") %>
<body>
<div class="row">
    <div class="col-8 offset-3">
        <h3><%=listing.title%></h3>
    </div>

    <div class="col-6 offset-3">
        <div class="listing-card">
                <img src="<%=listing.image%>" class="card-img-top show-img" alt="Listing Image">
            <div class="card-body">
                <i>Owned by: <%=listing.owner.username%></i><br><br>
                <p class="card-text"><%=listing.description%></p><br>
                <p class="card-text"><%if(listing.price){%>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                    <%}%></p><br>
                    <!-- <b></b><br><br> -->
                    <!-- <br><br> -->
                <p class="card-text"><%=listing.location%></p><br>
                <p class="card-text"><%=listing.country%></p>  
                    
                    
                </p>
            </div>
        </div>

        <!-- If the is logged-in AND the currUser Id is equal to the listing.owner Id, then only the edit & delete buttons will be shown-->
        <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
        
            <div class="show-btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-sm-4 col-md-2 edit-btn">Edit</a>

                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="del btn btn-dark offset-4" type="submit">Delete</button>
                </form>
            </div>
        <%}%>
        
    </div>

    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>
        <form method="POST" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" id="rating" min="1" max="5" name="review[rating]">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" class="form-control" rows="5" cols="30" name="review[comment]" required></textarea>
                    <div class="invalid-feedback">Comment is required</div>
                </div>
                
                <div class="mb-3 mt-3">
                  <button type="submit" class="btn btn-outline-dark">Submit</button>
                </div>

        </form>
        <hr>
            <p><b>All Reviews</b></p>
            <div class="row ">
                <%for(review of listing.reviews) {%>
                    <div class="card col-5 ms-2 mb-2 ">                    
                        <div class="card-body">
                            <h5 class="card-title">@<%=review.author.username%></h5>
                            <p class="card-text"><%=review.comment%>.</p>
                            <p class="card-text"><%=review.rating%></p>
                        </div>   
                        <%if(currUser &&currUser._id.equals(review.author._id)){%>
                            <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                            <button class="btn mb-1 offset-9 btn-sm btn-dark">Delete</button>
                            </form> 
                        <%}%>
                                        
                    </div>
                <%}%>
            </div>
     </div>   
   
</div>


