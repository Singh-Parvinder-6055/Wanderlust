<% layout("layouts/boilerplate") %>
<body> 
    <h3>All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
     <%for(listing of allListings) {%>
       <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card listing-card col" style="width: 20rem;">
            <img src="<%=listing.image%>" class="card-img-top" alt="listing-img" style="height:20rem;">
              <div class="card-img-overlay"></div> <!--hover effect happening here-->
                <div class="card-body">
                    <p class="card-text"><b><%=listing.title%></b></p>
                    <p class="card-text"><%if(listing.price){%>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%>/night<br><br>
                    <%}%></p>
                </div>
                
        </div>
       </a>        
    <%}%>
    </div>
    
    
</body>
</html>